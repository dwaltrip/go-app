<% if tile.on_left_side? %>
  <tr>
<% end %>

<td>
  <div id='<%= "tile-#{tile_counter}" %>'>
    <% container_class = "tile_container" %>
    <% container_class << " clickable" if tile.clickable? %>

    <%= content_tag :div, :class => container_class, "data-board-pos" => tile_counter do %>
      <%= image_tag(tile.display_image_path, { alt: tile.alt_text, class: "board_tile" }) %>

      <% if tile.has_preview_stone? %>
        <%= image_tag(tile.preview_stone_path, { alt: "preview stone", class: "preview_stone" }) %>
      <% end %>
    <% end %>
  </div>
</td>

<% if tile.on_right_side? %>
  </tr>
<% end %>
