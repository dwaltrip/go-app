<h1>New User Page</h1>

<p>Please enter your account information:</p>

<%= render 'layouts/form_errors', :form_obj => @user if @user %>

<%= form_tag(users_path, :method => 'post') do %>
  <p>
    <%= label_tag 'username', 'Username:' %><br>
    <%= text_field_tag 'username' %>
  </p>
  <p>
    <%= label_tag 'email', 'Email:' %><br>
    <%= text_field_tag 'email' %>
  </p>
    <%= label_tag 'password', 'Password:' %><br>
    <%= password_field_tag 'password' %>
  </p>
  <p>
    <%= label_tag 'password_confirmation', 'Confirm password:' %><br>
    <%= password_field_tag 'password_confirmation' %>
  </p>
  <p>
    <%= submit_tag 'Submit' %>
  </p>
<% end %>
